{
  "manifest_version": 3,
  "name": "Close Duplicate Tab",
  "description": "Close tabs which are duplicated. Only tabs with exact URL matches are closed.",
  "version": "3.0",

  "action": {
    "default_icon": "icon_128_gs.png",
    "default_title": "Close Duplicate Tabs"
  },

  "permissions": ["storage", "tabs", "scripting"],

  "background": {
    "service_worker": "close_tabs.js"
  },

  "options_page": "options.html",

  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  }
}
